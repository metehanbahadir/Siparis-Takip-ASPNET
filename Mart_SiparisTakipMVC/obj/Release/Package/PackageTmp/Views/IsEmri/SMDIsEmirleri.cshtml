                </tr>
            }
            else
            {
                <tr>
                    <td>@smd.msg_S_0349</td>
                    <td>@smd.msg_S_0352</td>
                    <td>@smd.msg_S_0353</td>
                    <td>@smd.msg_S_0354</td>
                    <td>@smd.msg_S_0080</td>
                    <td>@smd.msg_S_0247</td>
                    <td>@smd.msg_S_0361.ToString("dd/MM/yyyy")</td>
