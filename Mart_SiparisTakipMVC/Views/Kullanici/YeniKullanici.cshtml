@model Mart_SiparisTakipMVC.Models.Database.Kullanici
@{
    ViewBag.Title = "Kullanıcı Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>
    window.onload = function () {
        $('#YeniKullaniciModal').modal('show');
    }
</script>
<div class="modal" id="YeniKullaniciModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Yeni Kullanıcı</h3>
                <a class="btn btn-primary" style="color:white; float:right;" href="/Kullanici/Index"><i class="fa-solid fa-xmark"></i></a>
            </div>
            <form class="modal-body" action="/Kullanici/YeniKullanici" method="post">
                @Html.LabelFor(x => x.Personel)
                @Html.TextBoxFor(x => x.Personel, new { style = "width:400px; text-align:center;", required = "required", autocomplete = "off", @class = "form-control" })
                <br />
                @Html.LabelFor(x => x.Gorev)
                @Html.TextBoxFor(x => x.Gorev, new { style = "width:400px; text-align:center;", required = "required", autocomplete = "off", @class = "form-control" })
                <br />
                @Html.LabelFor(x => x.Yetki)
                @Html.DropDownList("KullaniciYetki", new SelectList(new[]
            {
            new SelectListItem { Text = "Seçiniz", Value ="Seçiniz"},
            new SelectListItem { Text = "Admin",Value ="1"},
            new SelectListItem { Text = "Yetkili",Value ="2"},
            new SelectListItem { Text = "THT Sorumlusu",Value ="3"},
            new SelectListItem { Text = "SMD Sorumlusu",Value ="4"},
            new SelectListItem { Text = "THT Viewer",Value ="5"},
            new SelectListItem { Text = "SMD Viewer",Value ="6"},
            new SelectListItem { Text = "Müşteri",Value ="7"},
            new SelectListItem { Text = "Görüntüleme",Value ="8"},
            new SelectListItem { Text = "Görev Görüntüleme",Value ="9"},
            new SelectListItem { Text = "Diğer",Value ="10"},
            }, "Value", "Text", ViewBag.Yetki as string), new { style = "width:400px; text-align:center;", required = "required", @class = "form-control" })
                <br />
                @Html.Label("E-Posta")
                @Html.TextBoxFor(x => x.Mail, new { style = "width:400px; text-align:center;", autocomplete = "off", @class = "form-control" })
                <br />
                @Html.LabelFor(x => x.KullaniciAdi)
                @Html.TextBoxFor(x => x.KullaniciAdi, new { style = "width:400px; text-align:center;", required = "required", autocomplete = "off", @class = "form-control" })
                <br />
                @Html.LabelFor(x => x.Sifre)
                @Html.TextBoxFor(x => x.Sifre, new { style = "width:400px; text-align:center;", required = "required", autocomplete = "off", @class = "form-control" })
                <br />
                <button class="btn btn-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>

